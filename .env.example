# Example .env file for Balance Up API

# API settings
PROJECT_NAME=Balance Up API
VERSION=1.0.0
DEBUG=False
HOST=127.0.0.1
PORT=8000
API_V1_STR=/api/v1

# Database configuration
DATABASE_URL=sqlite:///database/penalties.db

# API configuration
API_KEY=your_api_key_here

# Secret key for signing tokens
SECRET_KEY=your_secret_key_here

# Rate limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=10

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# File import directories
IMPORT_DIRECTORY=app/cashbox
ARCHIVE_DIRECTORY=app/cashbox/archive

# Environment (development, production, test)
ENVIRONMENT=development