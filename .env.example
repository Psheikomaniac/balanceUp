# Balance Up API Environment Variables
# Copy this file to .env and fill in the appropriate values

# API settings
PROJECT_NAME=Balance Up API
VERSION=1.0.0
DEBUG=false
HOST=127.0.0.1
PORT=8000
API_V1_STR=/api/v1

# Database settings
DATABASE_URL=sqlite:///database/penalties.db

# Security settings
# IMPORTANT: Change this to a secure random string in production!
SECRET_KEY=CHANGE_ME_TO_A_SECURE_RANDOM_STRING
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Rate limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=10

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=app.log

# File import settings
IMPORT_DIRECTORY=app/cashbox
ARCHIVE_DIRECTORY=app/cashbox/archive

# Environment (development, production, test)
ENVIRONMENT=development